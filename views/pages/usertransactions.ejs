<!DOCTYPE html>
<!-- views/pages/userid.ejs -->
<head>
<% include ../common/head %>
</head>
<% include ../common/body %>
<main>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>Your Transactions History</h2>
			<form action="/getusertransactiondetails" method="POST">  
				<input type="hidden" name="user_id" value=<%= userid%>>
				<table class="table table-striped table-hover">
					<% for(var i=0; i < arr.length; i++) { %>
					<tr>
					<td> <input type="radio" name="transaction_id" value=<%= arr[i].usertransaction_id %>  checked> </td>    
					<td>Transaction Id : <%= arr[i].usertransaction_id %> &nbsp;&nbsp;&nbsp;&nbsp;</td>
					<td>Transaction Date : <%= arr[i].usertransaction_date %></td>
					</tr>
					<% } %>
				</table>
				<input type="submit" class="btn btn-primary" value="Submit">  
			</form>
		</div>
	</div>
</div>
</main>
